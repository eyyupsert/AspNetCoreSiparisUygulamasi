@model KategoriGuncelleModel

<form asp-action="Guncelle" asp-controller="Kategori" asp-area="Admin" method="post"
      class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Kategori Adı:</label>
        <span asp-validation-for="@Model.Ad" class="text-danger"></span>
        <input asp-for="@Model.Ad" class="form-control" />
    </div>
    <div class="form-group mt-4">
        <a asp-action="Index" asp-controller="Kategori" asp-area="Admin" class="btn btn-warning">Vazgeç</a>
        <button type"submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>
@section JavaScript{
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}